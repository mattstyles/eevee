{
  "name": "@eevee/core",
  "version": "0.0.0",
  "description": "Eevee ECS core module",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "swc src/index.ts -d lib",
    "build:watch": "swc -w src/index.ts -d lib",
    "types": "tsc src/index.ts -d --emitDeclarationOnly --outDir lib",
    "types:watch": "tsc -w src/index.ts -d --emitDeclarationOnly --outDir lib",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "concurrently --kill-others \"pnpm run build:watch\" \"pnpm run types:watch\" \"pnpm run test:watch\""
  },
  "author": "Matt Styles",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.111",
    "@swc/jest": "^0.2.8",
    "@types/jest": "^27.0.3",
    "concurrently": "^6.4.0",
    "jest": "^27.3.1",
    "typescript": "^4.5.2"
  }
}
